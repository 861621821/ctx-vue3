{
    "name": "西岚",
    "description": "Xilan`s Chrome Extension",
    "version": "3.0.0",
    "manifest_version": 3,
    "devtools_page": "src/panel/panel.html",
    "action": {
        "default_popup": "/src/popup/popup.html",
        "default_icon": {
            "16": "src/assets/image/128.png",
            "32": "src/assets/image/128.png",
            "48": "src/assets/image/128.png",
            "128": "src/assets/image/128.png"
        }
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "Ctrl+Shift+L"
            },
            "description": "打开面板"
        }
    },
    "permissions": ["tabs", "storage", "webNavigation", "webRequest", "cookies", "notifications"],
    "host_permissions": ["http://*/*", "https://*/*", "<all_urls>"],
    "background": {
        "service_worker": "src/utils/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "<all_urls>"],
            "js": ["src/content/main.js"]
        },
        {
            "matches": ["http://*/*", "https://*/*", "<all_urls>"],
            "js": ["src/utils/autoFill.js"]
        },
        {
            "matches": ["https://juejin.cn/user/center/signin*"],
            "js": ["src/utils/juejin.js"]
        },
        {
            "matches": ["https://blog.csdn.net/*"],
            "js": ["src/utils/csdn.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["src/assets/image/new.png"],
            "matches": ["<all_urls>"]
        }
    ]
}
